@using MVC_Template.Models;
@model Product

@{
    ViewBag.Title = "Guncelle";
}

<br />
<br />
<div class="row">
    <div class="col-md-12 col-sm-12 col-lg-12 ">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Urun Guncelleme Sayfası
                </div>
                <div class="block-controls">
                    <a href="/Urun/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Urun/Guncelle" method="post" role="form">
                        <input type="hidden" name="ProductID" value="@Model.ProductID">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Ürün adı:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1"
                                   placeholder="Ürün adı giriniz" name="ProductName"
                                   value="@Model.ProductName">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Fiyat:</label>
                            <input type="number" class="form-control" id="exampleInputPassword1"
                                   placeholder="Fiyat giriniz" name="UnitPrice"
                                   value="@Model.UnitPrice">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">
                                Stok:
                            </label>
                            <input type="number" class="form-control" id="exampleInputEmail1" placeholder="Stok miktarı giriniz" name="UnitsInStock"  value="@Model.UnitsInStock">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Kategori:</label>
                            <select class="form-control" name="CategoryID">
                                @foreach (Category ktg in ViewBag.Kategoriler)
                                {
                                    if (ktg.CategoryID == Model.CategoryID)
                                    {
                                        <option value="@ktg.CategoryID" selected> @ktg.CategoryName </option>
                                    }
                                    else
                                    {
                                        <option value="@ktg.CategoryID"> @ktg.CategoryName </option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tedarikçi:</label>
                            <select class="form-control" name="SupplierID">
                                @foreach (Supplier ted in ViewBag.Tedarikciler)
                                {
                                    if (ted.SupplierID == Model.SupplierID)
                                    {
                                        <option value="@ted.SupplierID" selected> @ted.CompanyName </option>
                                    }
                                    else
                                    {
                                        <option value="@ted.SupplierID"> @ted.CompanyName </option>
                                    }
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


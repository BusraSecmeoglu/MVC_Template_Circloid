
@{
    ViewBag.Title = "Rol Ata";
}
@model string
<div class="row">
    <div class="col-md-12 col-sm-12 col-lg-12 ">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Rol Atama Sayfası
                </div>
                <div class="block-controls">
                    <a href="/Kullanici/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Kullanici/RolAta" method="post" role="form" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Kullanici Adı:</label>
                            @*<input type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="UserName" value="@Model" disabled="disabled">*@
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="UserName" value="@(ViewBag.UserName)" readonly="readonly">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Rol:</label>
                            <select name="RoleName" class="form-control">
                                @foreach (string rol in ViewBag.Roller)
                                {
                                    <option value="@rol">@rol</option>
                                }
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


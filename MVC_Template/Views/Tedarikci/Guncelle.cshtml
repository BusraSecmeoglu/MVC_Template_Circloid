
@{
    ViewBag.Title = "Guncelle";
}
@using MVC_Template.Models;
@model Supplier

<br />
<br />
<div class="row">
    <div class="col-md-12 col-sm-12 col-lg-12 ">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Tedarikçi Guncelleme Sayfası
                </div>
                <div class="block-controls">
                    <a href="/Urun/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Tedarikci/Guncelle" method="post" role="form">
                        <input type="hidden" name="SupplierID" value="@Model.SupplierID">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Firma adı:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1"
                                   placeholder="Firma adı giriniz" name="CompanyName"
                                   value="@Model.CompanyName">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">İlgili Kişi Adı:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1"
                                   placeholder="İlgili kişi giriniz" name="ContactName"
                                   value="@Model.ContactName">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">İlgili Kişi Ünvanı:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1"
                                   placeholder="İlgili kişi ünvanı giriniz" name="ContactTitle"
                                   value="@Model.ContactTitle">
                        </div>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


